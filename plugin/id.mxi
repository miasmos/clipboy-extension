<?xml version="1.0" encoding="UTF-8"?>
<macromedia-extension
    id="clipboy-twitch"
    icon="icon.png"
    name="Clipboy for Twitch"
    name_resid="app.store.name"
    requires-restart="true"
    version="1.0.0"
    ismultilingual="true">
    <author name="Stephen Poole"/>
    <description>
        <![CDATA[<meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
        Download Twitch clips directly into Adobe with the click of a button.]]>
    </description>
    <license-agreement>
        <![CDATA[]]>
    </license-agreement>
    <update>http://localhost/clipboy-twitch/latest</update>
    <ui-access>Download Twitch clips directly into Adobe with the click of a button.</ui-access>
    <products>
        <product familyname="Premiere"/>
    </products>
    <files>
        <file source="Extension/package.zxp"
            destination=""
            file-type="CSXS"
            products="Premiere" />
        <file source="id.mxi_Resources" destination="$resourceroot" isresourcefile="true" />
        <file source="icon.png" destination="$ExtensionSpecificEMStore" />
    </files>
</macromedia-extension>